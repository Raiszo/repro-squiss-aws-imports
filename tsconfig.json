{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "ts-node": {
        "transpileOnly": true
    },
    "compilerOptions": {
        "incremental": true,
        "outDir": "dist",
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "inlineSourceMap": true
    },
    "include": [
        "**/*.ts",
        "tsconfig.json"
    ],
    "exclude": [
        "**/node_modules",
        "**/.*/",
        "dist"
    ]
}
