{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",
    "compilerOptions": {
        "incremental": true,
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "inlineSourceMap": true
    },
    "exclude": [
        "**/node_modules",
        "**/.*/",
        "dist"
    ]
}
